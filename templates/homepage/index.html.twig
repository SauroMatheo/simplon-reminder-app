{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
            <h2 class="text-pretty text-4xl font-bold text-gray-900 sm:text-5xl bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">Accueil</h2>
            <p class="mt-4 text-lg text-gray-600 border-l-4 border-blue-500 pl-4">Voici la liste des tâches que vous devez encore réaliser !</p>
        </div>
        <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:mt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            {% for reminder in reminders %}
            {{ include('reminder_list.html.twig') }}
            {% endfor %}
            {{ include("reminder_pagination.html.twig", {'link': 'homepage'}) }}
        </div>
    </div>
{% endblock %}
