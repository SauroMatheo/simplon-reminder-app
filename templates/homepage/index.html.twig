{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}
{% block body %}
<div class="bg-gradient-to-b from-gray-50 to-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
            <h2 class="text-pretty text-4xl font-bold text-gray-900 sm:text-5xl bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">Mes rappels</h2>
            <p class="mt-4 text-lg text-gray-600 border-l-4 border-blue-500 pl-4">Voici la liste des tâches que vous devez encore réaliser !</p>
        </div>
        <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:mt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            {% for reminder in reminders %}
            <article class="flex flex-col bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
                <div class="p-6">
                    <div class="flex items-center gap-x-4 text-xs">
                        <time class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-sm font-medium text-blue-700">
                            <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            {{ reminder.getDueDate()|date('d/m/Y H:i:s') }}
                        </time>
                    </div>
                    <div class="mt-4">
                        <h3 class="text-xl font-semibold text-gray-900 hover:text-blue-600 transition-colors">
                            <a href="#">{{ reminder.getTitle() }}</a>
                        </h3>
                        <p class="mt-3 text-gray-600 line-clamp-3">{{ reminder.getDescription() }}</p>
                    </div>
                    <div class="mt-6 flex items-center gap-x-4">
                        <div class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-sm font-medium text-indigo-700">
                            <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z" />
                            </svg>
                            {{ reminder.getCategory().getName() }}
                        </div>
                        <a href="#" class="ml-auto inline-flex items-center rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-700 transition-colors">
                            Voir plus
                            <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </a>
                    </div>
                </div>
            </article>
            {% endfor %}
            {% if pagination.totalPages > 1 %}
            <div class="col-span-full mt-10 flex justify-center">
                <nav class="flex items-center gap-x-2" aria-label="Pagination">
                    {% if pagination.hasPreviousPage %}
                        <a href="{{ path('homepage', {page: pagination.currentPage - 1}) }}"
                           class="inline-flex items-center rounded-lg bg-blue-50 px-4 py-2 text-sm font-semibold text-blue-600 hover:bg-blue-100 transition-colors">
                            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                            </svg>
                            Précédent
                        </a>
                    {% endif %}

                    {% for i in 1..pagination.totalPages %}
                        <a href="{{ path('homepage', {page: i}) }}"
                           class="inline-flex items-center rounded-lg px-4 py-2 text-sm font-semibold {{ pagination.currentPage == i ? 'bg-blue-600 text-white' : 'text-gray-900 hover:bg-gray-100' }} transition-colors">
                            {{ i }}
                        </a>
                    {% endfor %}

                    {% if pagination.hasNextPage %}
                        <a href="{{ path('homepage', {page: pagination.currentPage + 1}) }}"
                           class="inline-flex items-center rounded-lg bg-blue-50 px-4 py-2 text-sm font-semibold text-blue-600 hover:bg-blue-100 transition-colors">
                            Suivant
                            <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </a>
                    {% endif %}
                </nav>
            </div>
{% endif %}
        </div>
    </div>
</div>
{% endblock %}

