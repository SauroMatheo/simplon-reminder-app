{% extends 'base.html.twig' %}

{% block title %}Rappels{% endblock %}

{% block body %}
<div class="mx-auto max-w-7xl px-6 lg:px-0">
    <div class="mx-auto max-w-2xl lg:mx-0">
        <h2 class="text-pretty text-4xl font-bold text-gray-900 sm:text-5xl bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">Mes rappels</h2>
    </div>
    <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:mt-16 lg:mx-0 lg:max-w-none lg:grid-cols-4">
        {% for reminder in reminders %}
        {{ include('reminder_list.html.twig') }}
        {% endfor %}
    </div>

    <br><br>
    <a class="text-lg m-4 rounded-lg bg-blue-600 px-4 py-2 font-semibold text-white hover:bg-blue-700 transition-colors" href="{{ path('app_reminder_new') }}">
        Créer un Rappel ►
    </a>
    {{ include('reminder_pagination.html.twig', {'link': 'app_reminder_index'}) }}
</div>

{% endblock %}
