{% extends 'base.html.twig' %}

{% block title %}Reminder index{% endblock %}

{% block body %}
    <h1>Reminder index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Date limite</th>
                <th>Terminé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reminder in reminders %}
            <tr>
                <td>{{ reminder.title }}</td>

                {% if reminder.description|length > 50 %}
                    <td title="{{ reminder.description }}">
                    {{ reminder.description|slice(0,50) }}...
                {% else %}
                    <td>{{ reminder.description }}
                {% endif %}
                </td>
                <td>{{ reminder.dueDate ? reminder.dueDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reminder.isDone ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('app_reminder_show', {'id': reminder.id}) }}">Détails</a>
                    <a href="{{ path('app_reminder_edit', {'id': reminder.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun rapel trouvé !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reminder_new') }}">Create new</a>
{% endblock %}
