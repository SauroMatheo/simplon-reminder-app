{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
    <div class="flex flex-col gap-2 max-w-full">
        <div class="flex flex-col">
            <label for="{{ field_name(form.title) }}">{{ field_label(form.title) }}</label>
            <input
                required
                maxlength=255
                id="{{ field_name(form.title) }}"
                name="{{ field_name(form.title) }}"
                value="{{ field_value(form.title) }}"
                placeholder="{{ field_label(form.title) }}..."
                class="border shadow-sm  border-slate-200 p-1 rounded-md"
            ></input>
        </div>

        <div class="flex flex-col">
            <label for="{{ field_name(form.description) }}">{{ field_label(form.description) }}</label>
            <textarea
                required
                id="{{ field_name(form.description) }}"
                name="{{ field_name(form.description) }}"
                value="{{ field_value(form.description) }}"
                placeholder="{{ field_label(form.description) }}..."
                class="border shadow-sm  border-slate-200 p-1 rounded-md"
            ></textarea>
        </div>

        <div class="grid grid-cols-2 gap-2">
            <div class="flex flex-col">
                <label for="{{ field_name(form.dueDate) }}">{{ field_label(form.dueDate) }}</label>
                <input
                    required
                    type="datetime-local"
                    id="{{ field_name(form.dueDate) }}"
                    name="{{ field_name(form.dueDate) }}"
                    value="{{ field_value(form.dueDate) }}"
                    placeholder="{{ field_label(form.dueDate) }}..."
                    class="border shadow-sm  border-slate-200 p-1 rounded-md"
                ></input>
            </div>
            
            <div class="flex flex-col">
                <label for="{{ field_name(form.category) }}">{{ field_label(form.category) }}</label>
                <select
                    required name="{{ field_name(form.category) }}"
                    id="{{ field_name(form.category) }}"
                    class="border shadow-sm  border-slate-200 p-1 rounded-md"
                >
                    <option value="">(Aucune cat√©gorie)</option>

                    {% for label, value in field_choices(form.category) %}
                        <option value="{{ value }}">{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>  

        <button class="text-lg my-2 rounded-lg bg-blue-600 px-4 py-2 font-semibold text-white hover:bg-blue-700 transition-colors"">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}
