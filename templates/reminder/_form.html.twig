{{ form_start(form, {'attr': {'class': 'w-full max-w-2xl mx-auto p-4'}}) }}
    <div class="flex flex-col gap-4">
        <div class="flex flex-col">
            {{ form_label(form.title, null, {'label_attr': {'class': 'mb-1 font-semibold'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'border shadow-sm border-slate-200 p-2 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="flex flex-col">
            {{ form_label(form.description, null, {'label_attr': {'class': 'mb-1 font-semibold'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'border shadow-sm border-slate-200 p-2 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none', 'rows': '5'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="flex flex-col">
            {{ form_label(form.dueDate, null, {'label_attr': {'class': 'mb-1 font-semibold'}}) }}
            {{ form_widget(form.dueDate, {'attr': {'class': 'border shadow-sm border-slate-200 p-2 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none'}}) }}
            {{ form_errors(form.dueDate) }}
        </div>

        <div class="flex flex-col">
            {{ form_label(form.category, null, {'label_attr': {'class': 'mb-1 font-semibold'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'border shadow-sm border-slate-200 p-2 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none'}}) }}
            {{ form_errors(form.category) }}
        </div>

        <div class="flex flex-col">
            <button type="submit" class="inline-flex items-center px-4 py-2 text-base font-semibold text-white bg-blue-500 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 justify-center">
                {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>
{{ form_end(form) }}